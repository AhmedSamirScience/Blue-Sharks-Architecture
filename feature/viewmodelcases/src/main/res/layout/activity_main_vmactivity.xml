<?xml version="1.0" encoding="utf-8" ?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainVMActivity"
>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

        <Button
            android:id="@+id/basicViewModelButton"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_50sdp"
            android:textSize="@dimen/_11ssp"
            android:text="View Model Basic Flow"
            app:layout_constraintBottom_toTopOf="@+id/sharedViewModelActivitiesButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
        />

        <Button
            android:id="@+id/sharedViewModelActivitiesButton"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_50sdp"
            android:textSize="@dimen/_11ssp"
            android:text="Activity Shared View Model Flow"
            app:layout_constraintBottom_toTopOf="@+id/sharedViewModelNavGraphButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basicViewModelButton"
        />

        <Button
            android:id="@+id/sharedViewModelNavGraphButton"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_50sdp"
            android:textSize="@dimen/_11ssp"
            android:text="Nav Graph Shared View Model Flow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sharedViewModelActivitiesButton"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
