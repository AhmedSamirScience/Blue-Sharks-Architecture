<?xml version="1.0" encoding="utf-8" ?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_basic_vm"
    app:startDestination="@id/basicVMFragment"
>

    <fragment
        android:id="@+id/basicVMFragment"
        android:name="com.samir.bluearchitecture.viewmodelcases.basicFlow.fragment.first.BasicVMFragment"
        android:label="fragment_basic_v_m"
        tools:layout="@layout/fragment_basic_v_m"
    >
        <action
            android:id="@+id/action_basicVMFragment_to_configChangeVMFragment"
            app:destination="@id/configChangeVMFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"
        />
    </fragment>
    <fragment
        android:id="@+id/configChangeVMFragment"
        android:name="com.samir.bluearchitecture.viewmodelcases.basicFlow.fragment.second.ConfigChangeVMFragment"
        android:label="fragment_config_change_v_m"
        tools:layout="@layout/fragment_config_change_v_m"
    />
</navigation>
